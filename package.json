{
  "name": "reconnect.js",
  "version": "1.0.0",
  "description": "",
  "main": "lib",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "nodemon",
    "build": "tsc && webpack --mode production --display-modules && cp build/index.d.ts lib/ && npm pack",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "jest -i --testPathIgnorePatterns example",
    "release": "release-it",
    "doc": "cd doc && npm start",
    "doc:prepare": "cd doc && npm i",
    "doc:build": "cd doc && npm run build",
    "doc:deploy": "npm run doc:build && gh-pages -d doc/build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@types/react": "^17.0.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "8.1.0",
    "css-loader": "^3.4.1",
    "eslint": "^7.5.0",
    "eslint-config-revtel": "^0.0.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "release-it": "^14.2.2",
    "style-loader": "^1.1.2",
    "typescript": "^4.2.4",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
